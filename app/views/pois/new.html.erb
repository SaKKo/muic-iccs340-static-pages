<h1>New Poi</h1>

<div class="row">
  <div class="col-md-3">
    <%= render 'form' %>
  </div>
  <div class="col-md-9">
    <div id="map"></div>
  </div>
</div>

<%= link_to 'Back', pois_path %>

<%= content_for :js do %>
<script src="https://maps.googleapis.com/maps/api/js?callback=initMap" async defer></script>

<script>
  var map;
  function initMap() {
    map = new google.maps.Map(document.getElementById('map'), {
      center: {
        lat: -34.397,
        lng: 150.644
      },
      zoom: 8
    });

    var myLatLng = {
      lat: -34.397,
      lng: 150.644
    };
    var marker = new google.maps.Marker({
      position: myLatLng,
      map: map,
      draggable: true,
      title: 'Hello World!'
    });
    marker.addListener('drag', function() {
      $('#poi_latitude').val(Number(marker.position.lat()))
      $('#poi_longitude').val(Number(marker.position.lng()))
    });
  }
</script>
<% end %>
